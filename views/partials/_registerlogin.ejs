<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#registerlogin" style=" background-color: #00c4cc;">
    Login/Register
</button>

<div class="modal fade" id="registerlogin" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="registerlogin">Register or Login here</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" style="align-content: center;  ">

            <div class="login">
                <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style=" background-color: #00c4cc;">
                  Login
                </button>
                <div class="dropdown-menu">
                    <form action="/login" method="POST">
                        <div class="form-group">
                          <label>Email address</label>
                          <input type="email" class="form-control" id="email" >
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control" id="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                </div>
              </div>

              <div class="register">
                  <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style=" background-color: #7d2ae8;">
                    Register
                  </button>
                  <div class="dropdown-menu">
                      <form action="/register" method="POST">
                          <div class="form-group">
                              <label>Name</label>
                              <input class="input-field" type="text" placeholder="Username" id="name">
                          </div>
                          <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" placeholder="Email" id="email" >
                          </div>
                          <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Password" id="password">
                          </div>
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                  </div>
                </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
